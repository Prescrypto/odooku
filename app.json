{
  "name": "Odooku",
  "description": "Run Odoo on Heroku",
  "repository": "https://github.com/adaptivdesign/odooku",
  "keywords": [
    "odoo",
    "openerp",
    "python"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/Prescrypto/odooku-buildpack.git#submodules-fetch"
    },
    {
      "url": "https://github.com/SectorLabs/heroku-buildpack-git-submodule.git"
    }
  ],
  "addons": [
    "heroku-postgresql:hobby-basic"
  ],
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "description": "AWS access key id",
      "value": ""
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "AWS secret access key",
      "value": ""
    },
    "AWS_REGION": {
      "description": "AWS region",
      "value": "us-east-1"
    },
    "S3_BUCKET": {
      "description": "Amazon S3 bucket for attachment storage",
      "value": ""
    },
    "GIT_REPO_URL": {
      "description": "Git SSH url to fetch submodules",
      "value": ""
    },
    "GIT_SSH_Key": {
      "description": "Git SSH key",
      "value": ""
    },
    "ODOOKU_ADMIN_PASSWORD": {
      "description": "Default admin password for Odoo",
      "value": ""
    }
  },
  "scripts": {
    "postdeploy": "odooku database preload"
  }
}
